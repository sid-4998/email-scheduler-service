generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model EmailSender {
  id            String   @id @default(uuid())
  name          String
  email         String
  smtpUsername  String
  smtpPassword  String
  smtpHost      String
  smtpPort      Int
  hourlyLimit   Int

  createdAt     DateTime @default(now())

  scheduledEmails ScheduledEmail[]
}

model ScheduledEmail {
  id               String   @id @default(uuid())
  senderId         String

  to               String
  subject          String
  body             String

  scheduledFor     DateTime
  status           EmailStatus @default(PENDING)

  lastError        String?
  retryCount       Int @default(0)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  sender           EmailSender @relation(fields: [senderId], references: [id])

  sendLogs         EmailSendLog[]

  @@index([scheduledFor])
  @@index([status])
}

model EmailSendLog {
  id              String   @id @default(uuid())
  scheduledEmailId String
  sentAt          DateTime
  success         Boolean
  errorMessage    String?

  scheduledEmail  ScheduledEmail @relation(fields: [scheduledEmailId], references: [id], onDelete: Cascade)
}

enum EmailStatus {
  PENDING
  SCHEDULED
  SENT
  FAILED
  DELAYED
  CANCELLED
}


